{
  "workbench.iconTheme": "material-icon-theme",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript, typescript]": {
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "editor.tabSize": 2,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.autoSave": "off",
  "editor.parameterHints.enabled": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "html.suggest.html5": false,
  "javascript.suggestionActions.enabled": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Night Owl",
  "editor.autoClosingQuotes": "always",
  "editor.fontWeight": "normal",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 16,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": -1,
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "none",
  "cSpell.userWords": [
    "chakra",
    "codecov",
    "Kunz",
    "Parens",
    "perc",
    "preis",
    "previewable",
    "prismic",
    "reactjs",
    "subnavigation",
    "video",
    "youtube"
  ],
  "terminal.integrated.tabs.enabled": true,
  // Bracket Pair Colorizer
  "bracketPairColorizer.highlightActiveScope": false,
  "json.schemas": [
    {
      "name": "vscode-expo-manifest",
      "url": "file:///Users/luispacheco/Library/Application%20Support/Code/User/globalStorage/bycedric.vscode-expo/manifest-42.0.0.json",
      "fileMatch": ["app.json", "app.config.json"]
    }
  ]
}
